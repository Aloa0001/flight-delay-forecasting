{
  "name": "Spark Cluster Dev",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "spark-master",  // Develop inside the master container
  "workspaceFolder": "/workspace",
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.10"
    }
  },
  "postCreateCommand": "pip install -r requirements.txt",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "remoteUser": "root"  // For Spark perms; adjust if needed
}